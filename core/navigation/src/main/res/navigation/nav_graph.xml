<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="io.shortcut.android.xkcd.comics.main.splash.presenter.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_explorerFragment"
            app:destination="@id/explorerFragment" />
    </fragment>

    <fragment
        android:id="@+id/explorerFragment"
        android:name="io.shortcut.android.xkcd.comics.explorer.presenter.ExplorerFragment"
        android:label="@string/explorer_fragment_label"
        tools:layout="@layout/fragment_explorer" />
</navigation>